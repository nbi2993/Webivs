{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/components/**",
        "destination": "/components/**.html"
      },
      {
        "source": "/Blogs/**",
        "destination": "/Blogs/**.html"
      },
      {
        "source": "/Pages/**",
        "destination": "/Pages/**.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "private": true,
    "region": "us-central1", // Đảm bảo khớp với region trong functions/index.js
    "runtime": "nodejs20", // Đảm bảo khớp với engines.node trong functions/package.json (hoặc 18)
    "secrets": [            // <-- KHAI BÁO CÁC BÍ MẬT TỪ SECRET MANAGER BẰNG TÊN CỦA CHÚNG
      "SERVICEACCOUNT_KEY_BASE64", // Tên secret cho Service Account Key
      "GEMINI_API_KEY"             // Tên secret cho Gemini API Key
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "port": 4000
    }
  }
}
